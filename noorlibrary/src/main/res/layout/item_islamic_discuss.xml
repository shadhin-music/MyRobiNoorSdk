<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="constant"
            type="com.gakk.noorlibrary.util.ConstantsKt" />

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.literature.Literature" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_spacing">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTalk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fullImageUrl="@{item.contentBaseUrl+'/'+item.imageUrl}"
            android:scaleType="centerCrop"
            android:src="@drawable/place_holder_16_9_ratio"
            app:attachedProgressBar="@{progressBar}"
            app:layout_constraintDimensionRatio="h,1:0.560975609"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeHolderDimension="@{constant.PLACE_HOLDER_16_9}" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivTalk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivTalk">

        </ProgressBar>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>