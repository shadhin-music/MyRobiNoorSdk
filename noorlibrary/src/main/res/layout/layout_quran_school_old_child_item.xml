<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.quranSchool.QuranSchoolModel" />

        <variable
            name="constant"
            type="com.gakk.noorlibrary.util.ConstantsKt" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_spacing">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_card"
            android:layout_width="144dp"
            android:layout_height="81dp"
            app:cardCornerRadius="@dimen/small_spacing"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/scholars_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/default_content_des"
                    android:fullImageUrl="@{item.contentBaseUrl+'/'+item.imageUrl}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place_holder_16_9_ratio"
                    app:attachedProgressBar="@{progressBar}"
                    app:placeHolderDimension="@{constant.PLACE_HOLDER_16_9}" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/scholars_img"
                    android:layout_alignBottom="@+id/scholars_img"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/default_content_des"
                    android:src="@drawable/ic_play_ovelay" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/small_spacing"
            android:layout_toEndOf="@+id/img_card"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/default_content_des"
                android:paddingBottom="@dimen/small_spacing"
                android:src="@drawable/icon_live"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@{item.liveOn}"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/black_secondary"
                android:fontFamily="sans-serif"
                tools:text="5 march 2020" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{item.title}"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/txt_color_black"
                android:fontFamily="sans-serif"
                tools:text="Quran Shikkha part 3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="sans-serif"
                android:text='@{item.about ?? item.scholarName}'
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/black_secondary"
                tools:text="learn quran and recite Quran" />

        </LinearLayout>

    </RelativeLayout>
</layout>