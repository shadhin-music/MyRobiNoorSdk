<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLearnQuran"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/small_spacing"
            android:src="@drawable/ic_quran_learning"
            app:layout_constraintEnd_toStartOf="@id/tvTitleLearnQuran"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleLearnQuran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title_quran_learn"
            android:textColor="@color/txt_color_title"
            android:textSize="@dimen/margin_14"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="@id/imgLearnQuran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgLearnQuran" />

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgLearnQuran">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgBg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:imageUrl="@{item.fullImageUrl}"
                    app:attachedProgressBar="@{progressBar}"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/rlLearnQuran"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/imgBg"
                    app:layout_constraintEnd_toEndOf="@+id/imgBg"
                    app:layout_constraintStart_toStartOf="@+id/imgBg"
                    app:layout_constraintTop_toTopOf="@+id/imgBg">

                </ProgressBar>

                <RelativeLayout
                    android:id="@+id/rlLearnQuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/standard_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgLearnQuranShare"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"
                        android:src="@drawable/ic_read" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLearnQuran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/small_spacing"
                        android:layout_toEndOf="@id/imgLearnQuranShare"
                        android:text="@string/txt_learn_more"
                        android:textColor="@color/ash"
                        android:textSize="@dimen/margin_12"
                        android:fontFamily="sans-serif"/>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>