<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />

        <variable
            name="itemGirl"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />

        <variable
            name="itemBoy"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:imageUrlNoProgress="@{item.fullImageUrl}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="40dp"
                android:paddingTop="@dimen/standard_margin"
                android:paddingEnd="40dp"
                android:paddingBottom="@dimen/standard_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_art"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/default_content_des"
                        android:src="@drawable/ic_islamic_name_top_art" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_spacing"
                        android:fontFamily="sans-serif"
                        android:text="@string/search_islamic_name_text"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_24"
                    app:cardCornerRadius="@dimen/standard_margin"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:id="@+id/boyNamesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_spacing"
                        android:background="@drawable/dotted_line"
                        android:padding="@dimen/size_24">

                        <ImageView
                            android:id="@+id/ic_avatar_male"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/default_content_des"
                            android:imageUrlNoProgress="@{itemBoy.fullImageUrl}" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/boy_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ic_avatar_male"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/standard_margin"
                            android:text="@string/names_of_male"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/boy_name_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_12"
                            android:drawableEnd="@drawable/ic_right_double"
                            android:drawablePadding="@dimen/small_spacing"
                            android:text="@string/islamic_name"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/txt_color" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    app:cardCornerRadius="@dimen/standard_margin"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false">

                    <RelativeLayout
                        android:id="@+id/girlNamesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_spacing"
                        android:background="@drawable/dotted_line"
                        android:padding="@dimen/size_24">

                        <ImageView
                            android:id="@+id/ic_avatar_female"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:layout_centerHorizontal="true"
                            android:contentDescription="@string/default_content_des"
                            android:imageUrlNoProgress="@{itemGirl.fullImageUrl}" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/girl_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ic_avatar_female"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/standard_margin"
                            android:text="@string/names_of_female"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/girl_name_tv"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_12"
                            android:drawableEnd="@drawable/ic_right_double"
                            android:drawablePadding="@dimen/small_spacing"
                            android:text="@string/islamic_name"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/txt_color" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</layout>