<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bottomSheetItem"
            type="com.gakk.noorlibrary.model.BottomSheetItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_menu_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/small_spacing"
            android:background="@null"
            android:clickable="false"
            android:imageResId="@{bottomSheetItem.resId}"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/tv_menu_item_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.appcompat.widget.AppCompatImageButton>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_menu_item_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            android:maxLines="2"
            android:text="@{bottomSheetItem.title}"
            android:textAlignment="center"
            android:textColor="@color/txt_color_black"
            android:fontFamily="sans-serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btn_menu_item_image"
            app:layout_constraintStart_toStartOf="@+id/btn_menu_item_image">

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>