<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="literature"
            type="com.gakk.noorlibrary.model.literature.Literature" />

        <variable
            name="constant"
            type="com.gakk.noorlibrary.util.ConstantsKt" />

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/standard_margin"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toTopOf="@id/layoutCall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView17"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:imageUrl="@{item.fullImageUrl}"
                    app:attachedProgressBar="@{progressBarBg}"
                    app:layout_constraintDimensionRatio="h,1:0.6666666"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressBarBg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView17"
                    app:layout_constraintEnd_toEndOf="@+id/appCompatImageView17"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView17"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView17">

                </ProgressBar>
                <com.gakk.noorlibrary.util.CircleImageView
                    android:id="@+id/appCompatImageView10"
                    android:layout_width="136dp"
                    android:layout_height="136dp"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:fullImageUrl="@{literature.fullImageUrl}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/place_holder_2_3_ratio"
                    app:attachedProgressBar="@{progressBar}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:placeHolderDimension="@{constant.PLACE_HOLDER_2_3}" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/appCompatImageView10"
                    app:layout_constraintEnd_toEndOf="@id/appCompatImageView10"
                    app:layout_constraintStart_toStartOf="@id/appCompatImageView10"
                    app:layout_constraintTop_toTopOf="@id/appCompatImageView10" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:text="@{literature.title}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/txt_color_title"
                    android:fontFamily="sans-serif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView10"
                    tools:text="আল মারকাজুল ইসলামী" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPhone"
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/appCompatImageView17">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingStart="@dimen/standard_margin"
                            android:paddingTop="@dimen/standard_margin"
                            android:paddingBottom="@dimen/standard_margin"
                            android:text="@{literature.textInArabic}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/txt_color_black"
                            android:fontFamily="sans-serif"
                            app:layout_constraintEnd_toStartOf="@id/imgPhone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="+8801710 000 000" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/imgPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_margin"
                            android:background="@null"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_call"
                            app:layout_constraintBottom_toBottomOf="@+id/tvPhone"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvPhone" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardFacebook"
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/standard_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardPhone">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFacebook"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingStart="@dimen/standard_margin"
                            android:paddingTop="@dimen/standard_margin"
                            android:paddingBottom="@dimen/standard_margin"
                            android:text="@string/txt_fb_page"
                            android:fontFamily="sans-serif"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/txt_color_black"
                            app:layout_constraintEnd_toStartOf="@id/imgFacebook"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/imgFacebook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_margin"
                            android:background="@null"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_facebook_24"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFacebook"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvFacebook" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWebsite"
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/standard_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardFacebook">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvWebsite"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingStart="@dimen/standard_margin"
                            android:paddingTop="@dimen/standard_margin"
                            android:paddingBottom="@dimen/standard_margin"
                            android:text="@string/txt_website"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/txt_color_black"
                            android:fontFamily="sans-serif"
                            app:layout_constraintEnd_toStartOf="@id/imgWebsite"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/imgWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_margin"
                            android:background="@null"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_web"
                            app:layout_constraintBottom_toBottomOf="@+id/tvWebsite"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvWebsite" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAddress"
                    style="@style/CardViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/standard_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardWebsite">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:paddingStart="@dimen/standard_margin"
                            android:paddingTop="@dimen/standard_margin"
                            android:paddingBottom="@dimen/standard_margin"
                            android:text="@{literature.address}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/txt_color_black"
                            android:fontFamily="sans-serif"
                            app:layout_constraintEnd_toStartOf="@id/imgAddress"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/imgAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/standard_margin"
                            android:background="@null"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_baseline_location_on_24"
                            app:layout_constraintBottom_toBottomOf="@+id/tvAddress"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvAddress" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:justificationMode="inter_word"
                    android:text="@{literature.text}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/ash"
                    android:fontFamily="@font/notosansbengali_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardAddress"
                    tools:text="আপনার যাকাত, সাদাকাহ ও যে কোনো অনুদানের অর্থ আল মারকাজুল ইসলামী (এএমআই) কে অর্পণ করতে পারেন। আমরা যাকাতের অর্থ শতভাগ হকদারদের নিকট ন্যাস্ত করে থাকি। " />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/small_spacing"
            android:background="@drawable/ic_bg_login_enable"
            android:padding="@dimen/standard_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:src="@drawable/ic_call_white" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txt_call"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>