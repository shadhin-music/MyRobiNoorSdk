<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.gakk.noorlibrary.model.ImageFromOnline" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivHeaderHut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:imageUrl="@{item.fullImageUrl}"
            android:scaleType="centerCrop"
            app:attachedProgressBar="@{progressBar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,1:0.5638888888888889"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivHeaderHut"
            app:layout_constraintEnd_toEndOf="@+id/ivHeaderHut"
            app:layout_constraintStart_toStartOf="@+id/ivHeaderHut"
            app:layout_constraintTop_toTopOf="@+id/ivHeaderHut" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>