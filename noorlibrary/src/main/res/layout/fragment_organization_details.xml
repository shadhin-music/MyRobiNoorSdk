<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="literature"
            type="com.gakk.noorlibrary.model.literature.Literature" />

        <variable
            name="constant"
            type="com.gakk.noorlibrary.util.ConstantsKt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/standard_margin"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            app:layout_constraintBottom_toTopOf="@id/layoutVisit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:theme="@style/CardViewStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/appCompatImageView10"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:fullImageUrl="@{literature.fullImageUrl}"
                            android:scaleType="centerCrop"
                            android:src="@drawable/place_holder_2_3_ratio"
                            app:attachedProgressBar="@{progressBar}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:placeHolderDimension="@{constant.PLACE_HOLDER_2_3}" />

                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/appCompatImageView10"
                            app:layout_constraintEnd_toEndOf="@id/appCompatImageView10"
                            app:layout_constraintStart_toStartOf="@id/appCompatImageView10"
                            app:layout_constraintTop_toTopOf="@id/appCompatImageView10" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewNormal10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:text="@{literature.subcategoryName}"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/txt_color_black"
                    android:fontFamily="sans-serif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardImage"
                    tools:text="আহসানিয়া মিশন ক্যান্সার হাসপাতাল" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:text="@{literature.textInArabic}"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    app:layout_constraintEnd_toEndOf="@+id/textViewNormal10"
                    app:layout_constraintStart_toStartOf="@+id/textViewNormal10"
                    app:layout_constraintTop_toBottomOf="@+id/textViewNormal10"
                    tools:text="যাকাত • সাধারণ দান • মেডিকেল হেল্প" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/viewTopForm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:background="@drawable/ic_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvDetails" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="@dimen/small_spacing"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:justificationMode="inter_word"
                    android:text="@{literature.text}"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/txt_color_black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/viewTopForm"
                    tools:text="ঢাকা আহসানিয়া মিশন একটি আধুনিক ক্যান্সার হাসপাতাল যেখানে উন্নত চিকিৎসা সেবা প্রদান করাই এই প্রতিষ্ঠানের মুল লক্ষ্য। আহসানিয়া মিশন ক্যান্সার ও জেনারেল হাসপাতাল বাংলাদেশে ক্যান্সারের বিরুদ্ধে লড়াইয়ের অন্যতম প্রধান প্রকল্প।বর্তমানে বাংলাদেশে ১২,০০,০০০ এর বেশি ক্যান্সার রোগী রয়েছে, প্রতি বছর প্রায় ২,০০,০০০ নতুন ক্যান্সার রোগী বৃদ্ধি পায় এবং বছরে ১৫০,০০০ রোগী মারা যায়।

বাংলাদেশ ক্যান্সার সোসাইটির অনুমানের উপর ভিত্তি করে জনগণের অনুদানের সাথে একটি অত্যাধুনিক আধুনিক ক্যান্সার হাসপাতাল নির্মিত হচ্ছে। " />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutVisit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/small_spacing"
            android:background="@drawable/bg_border_rounded_white"
            android:padding="@dimen/standard_margin"
            app:layout_constraintBottom_toTopOf="@id/btnDonate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="@dimen/size_24"
                    android:layout_height="@dimen/size_24"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:src="@drawable/ic_web" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/txt_visit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDonate"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_height"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/ic_bg_login_enable"
            android:text="@string/txt_donate"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/txt_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>