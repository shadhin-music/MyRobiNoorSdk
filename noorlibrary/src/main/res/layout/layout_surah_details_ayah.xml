<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="ayat"
            type="com.gakk.noorlibrary.model.quran.ayah.Data" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAyahNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{ayat.ayahNumber}"
        android:textColor="@color/txt_color_black"
        android:textFontWeight="400"
        android:fontFamily="sans-serif"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gakk.noorlibrary.views.TextViewNormalArabic
        android:id="@+id/tvAyaArabic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@{ayat.textInArabic}"
        android:textAlignment="textStart"
        android:textFontWeight="700"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMore" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAyaNative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@{ayat.text}"
        android:fontFamily="sans-serif"
        android:textAlignment="textStart"
        android:textFontWeight="400"
        android:textSize="@dimen/margin_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAyaArabic" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAyaTranslation"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="সমস্ত প্রশংসা জগতসমূহের প্রতিপালক আল্লাহর জন্যে।"
        android:textAlignment="textStart"
        android:textFontWeight="400"
        android:textSize="@dimen/margin_14"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAyaNative" />

    <ImageButton
        android:id="@+id/btnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>